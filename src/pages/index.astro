---
	import Layout from "../layouts/Layout.astro"
	import { getCollection } from 'astro:content';
	const events = await getCollection("events")
---

<script>
	import "@github/relative-time-element"
</script>

<Layout>
	<main>
		<h1>lasa young democratic<br> socialists of america</h1>
		<nav>
			<h2>links</h2>
			<p><a href="https://github.com/lasaydsa/bylaws">bylaws</a></p>
			<p><a href="https://groups.google.com/g/lasaydsa">news</a></p>
			<p><a href="https://austindsa.org">austin dsa</a></p>
			<p><a href="https://dsausa.org">national</a></p>
		</nav>

		<section>
			<h2>join us</h2>
			<p>
				tuesdays at lunch in 202
			</p>
		</section>

		<section>
			<h2>upcoming</h2>
			{events.map(e => (
				<article class="event">
					<p><a href={e.data.link}>{e.data.title.toLowerCase()}</a></p>
					<relative-time datetime={e.data.datetime.toISOString()} format="relative" precision="minute" threshold="P6D" prefix="" hour="numeric" minute="numeric">
      		</relative-time>
				</article>
			))}
		</section>
	</main>
</Layout>

<style>
	main {
		container: main / inline-size;
		display: flex;
		flex-direction: column;
		gap: 1rem;
		padding: 2rem;
		overflow-y: scroll;
		height: fit-content;
	}

	h1 {
		font-size: 10cqi;
		color: var(--red);
		font-style: normal;
		font-weight: 400;
		line-height: normal;
		letter-spacing: -0.45cqi;
	}

	h2 {
		font-size: 4cqi;
		letter-spacing: -0.15cqi;
		opacity: 0.75;
		font-weight: 400;
	}

	a {
		color: black;
	}

	nav {
		display: flex;
		gap: 1rem;
		contain: layout;

		p {
			font-size: 4cqi;
			letter-spacing: -0.15cqi;
		}
	}

	p {
		font-size: 6cqi;
		letter-spacing: -0.25cqi;
		color: black;
	}

	@container (width < 800px) {
			p {
				font-size: 10cqi;
				letter-spacing: -0.5cqi;
			}

			h2, nav > p {
				font-size: 6cqi;
				letter-spacing: -0.25cqi;
			}

			nav {
				gap: 0.25rem;
			}

			h1 {
				font-size: 12cqi;
				letter-spacing: -0.5cqi;
			}
	}

	@container (width < 500px) {
			p {
				font-size: 13cqi;
				letter-spacing: -0.5cqi;
			}

			h2, nav > p {
				font-size: 8cqi;
				letter-spacing: -0.25cqi;
			}

			h1 {
				font-size: 15cqi;
				letter-spacing: -0.6cqi;
			}
	}

	article {
		display: flex;
		flex-direction: row;
		align-items: center;
		gap: 0.75rem;
		contain: layout;
		relative-time {
			font-size: 2.25cqi;
			text-transform: lowercase;
			border-radius: 6px;
			border: 1px solid rgba(253, 7, 7, 0.50);
			background: #F9B6B9;
			padding: 0.25rem 0.75rem 0rem 0.75rem;
			color: #CB0101;;
			letter-spacing: -0.1cqi;

			@container (width < 800px) {
					font-size: 5cqi;
					letter-spacing: -0.2cqi;
			}
		}
	}
</style>